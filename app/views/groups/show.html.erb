<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>

<p>
  <strong>Trainer:</strong>
  <%= @group.trainer.username %>
</p>

<table>
  <thead>
    <tr>
      <th>Players</th>
    </tr>
  </thead>

  <tbody>
    <% @group.users.each do |player| %>
      <tr>
        <td><%= player.username %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>
