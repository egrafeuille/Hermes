<p id="notice"><%= notice %></p>

<h1>Listing Micro Cycles</h1>

<table>
  <thead>
    <tr>
      <th>Meso cycle</th>
      <th>Name</th>
      <th>Notes</th>
      <th>Volume</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @micros.each do |micro| %>
      <tr>
        <td><%= micro.meso_id %></td>
        <td><%= micro.name %></td>
        <td><%= micro.notes %></td>
        <td><%= micro.volume %></td>
        <td><%= link_to 'Show', micro %></td>
        <td><%= link_to 'Edit', edit_micro_path(micro) %></td>
        <td><%= link_to 'Destroy', micro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

